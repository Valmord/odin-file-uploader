<div class="my-drive">
  <div class="drive-headers">
    <span>Name</span>
    <span>Size</span>
    <span>Options</span>
  </div>
  <ul class="drive-container">
    <% (shares || []).forEach( file => { %>
    <li class="link-item">
      <div class="file-details">
        <span><%= file.originalName %></span>
        <span> <%= file.fileSize %></span>
      </div>
      <div class="file-option-container shared">
        <a href="/share/download/<%= file.id %>"
          ><img src="/images/download.svg" alt="download" class="download-file"
        /></a>
        <a href="/share/unshare/<%= file.id %>"
          ><img
            src="/images/unshare.svg"
            alt="unshare"
            class="unshare-shared-file"
        /></a>
      </div>
    </li>
    <%}) %>
  </ul>
</div>
