<dialog id="folder-modal">
  <form action="/folder/create" method="post">
    <h2>New Folder</h2>
    <input
      type="hidden"
      name="path"
      id="hidden-path-input"
      aria-hidden="true"
    />
    <input
      type="text"
      name="folder-name"
      id="folder-name"
      maxlength="30"
      required
    />
    <div class="btn-container">
      <button type="reset" class="cancel-btn">Cancel</button>
      <button type="submit" class="create-btn">Create</button>
    </div>
  </form>
</dialog>
